    <script>
        function addGameRow() {
            const table = document.getElementById('gamingTable').getElementsByTagName('tbody')[0];
            const newRow = table.insertRow();
            newRow.innerHTML = `
                <td><input type="text" placeholder="Game name"></td>
                <td><input type="text" placeholder="Graphics settings"></td>
                <td><input type="text" placeholder="FPS / Performance"></td>
                <td><button class="delete-btn" onclick="deleteRow(this)">Delete</button></td>
            `;
        }

        function deleteRow(btn) {
            const row = btn.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        function collectData() {
            const data = {
                testInfo: {
                    testDate: document.getElementById('testDate').textContent,
                    system: document.getElementById('system').textContent,
                    os: document.getElementById('os').textContent,
                    display: document.getElementById('display').textContent,
                    browser: document.getElementById('browser').textContent,
                    config: document.getElementById('config').textContent
                },
                hardware: {},
                powerUsage: {
                    idle: document.getElementById('powerIdle').textContent,
                    daily: document.getElementById('powerDaily').textContent,
                    load: document.getElementById('powerLoad').textContent
                },
                benchmarks: [],
                games: [],
                notes: document.getElementById('notes').value
            };

            // Collect hardware
            const hwRows = document.getElementById('hardwareTable').getElementsByTagName('tbody')[0].rows;
            for (let row of hwRows) {
                const component = row.cells[0].textContent;
                const spec = row.cells[1].querySelector('input').value;
                if (spec) data.hardware[component] = spec;
            }

            // Collect benchmarks
            const bmRows = document.getElementById('benchmarkTable').getElementsByTagName('tbody')[0].rows;
            for (let row of bmRows) {
                const name = row.cells[0].textContent;
                const score = row.cells[1].querySelector('input').value;
                if (score) {
                    data.benchmarks.push({ name, score });
                }
            }

            // Collect games
            const gameRows = document.getElementById('gamingTable').getElementsByTagName('tbody')[0].rows;
            for (let row of gameRows) {
                const game = row.cells[0].querySelector('input').value;
                const settings = row.cells[1].querySelector('input').value;
                const performance = row.cells[2].querySelector('input').value;
                if (game || settings || performance) {
                    data.games.push({ game, settings, performance });
                }
            }

            return data;
        }

        function exportData() {
            const data = collectData();
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'system-test-' + new Date().toISOString().split('T')[0] + '.json';
            link.click();
            URL.revokeObjectURL(url);
        }

        function exportHTML() {
            const htmlContent = document.documentElement.outerHTML;
            const blob = new Blob([htmlContent], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'system-test-' + new Date().toISOString().split('T')[0] + '.html';
            link.click();
            URL.revokeObjectURL(url);
        }

        function printReport() {
            window.print();
        }

        function clearAll() {
            if (confirm('Are you sure you want to clear all data? This cannot be undone.')) {
                location.reload();
            }
        }
    </script>
