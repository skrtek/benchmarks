<div id="calc" class="output"></div>

<script>
function slugify(text) {
  return text.toLowerCase().replace(/[^a-z0-9]+/g, "_").replace(/^_|_$/g, "");
}

function getData() {
  return {
    device: device.value,
    cpu: cpu.value,
    gpu: gpu.value,
    ram: ram.value,
    storage: storage.value,
    os: os.value,

    power: {
      idle_w: Number(idlePower.value),
      load_w: Number(loadPower.value)
    },

    thermals: {
      cpu_c: cpuTemp.value,
      gpu_c: gpuTemp.value
    },

    benchmarks: benchmarks.value,
    gaming_notes: gamingNotes.value,
    verdict: verdict.value,

    ratings: {
      performance: perfRating.value,
      efficiency: effRating.value,
      noise: noiseRating.value
    },

    date: new Date().toISOString().split("T")[0]
  };
}

function performancePerWatt(perfScore = 100) {
  const load = Number(loadPower.value);
  return load ? (perfScore / load).toFixed(2) : "N/A";
}

function download(name, content) {
  const a = document.createElement("a");
  a.href = URL.createObjectURL(new Blob([content], { type: "text/plain" }));
  a.download = name;
  a.click();
}

function exportJSON() {
  const d = getData();
  const name = `${slugify(d.cpu)}_${slugify(d.device)}.json`;
  download(name, JSON.stringify(d, null, 2));
}

function exportMarkdown() {
  const d = getData();
  const name = `${slugify(d.cpu)}_${slugify(d.device)}.md`;
  const ppw = performancePerWatt();

  const md = `
# ${d.device}

**CPU:** ${d.cpu}  
**GPU:** ${d.gpu}  
**OS:** ${d.os}  
**Date:** ${d.date}

## System Specs
- RAM: ${d.ram}
- Storage: ${d.storage}

## Power & Thermals
- Idle Power: ${d.power.idle_w} W
- Load Power: ${d.power.load_w} W
- CPU Load Temp: ${d.thermals.cpu_c} ¬∞C
- GPU Load Temp: ${d.thermals.gpu_c} ¬∞C
- Performance per Watt (est): ${ppw}

## Benchmarks
${d.benchmarks}

## Real-World Use
${d.gaming_notes}

## Verdict
${d.verdict}

## Ratings
- Performance: ${d.ratings.performance}
- Efficiency: ${d.ratings.efficiency}
- Noise: ${d.ratings.noise}
`;
  download(name, md.trim());
  document.getElementById("calc").innerText =
    `Estimated Performance/Watt: ${ppw}`;
}
</script>

